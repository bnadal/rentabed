<h1>Detail of the ad</h1>
<% @ads.each do |ad|%>
<p>Ad: <%= ad.title  %></p>
<p>Description: <%= ad.description  %></p>
<p>City: <%= ad.city  %></p>
<p>Price per hour: <%= ad.price_per_hour  %></p>
<p>Price per night<%= ad.price_per_night  %></p>
<br>

  <% if ad.user ==  current_user %>
    <p><%=  "You are the owner of this bed! So you can not book it :)" %></p>
 
  <% else %>
    <p><%= link_to "Book this bed", new_ad_booking_path(ad) %></p>
  <% end %>


<%= link_to "Previous page", ads_path %></p>
<% end %>
