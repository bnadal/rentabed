<h2>My bookings as a renter</h2>


<% @outgoing_bookings.each do |booking| %>
<p><%= booking.ad.description %> --- host: <%= booking.ad.user.email %> --- <%= link_to "Cancel my booking", booking_path(booking), method: :delete%></p>
<% end %>
<br>
<h2>My pending bookings as a host (to be confirmed)</h2>
<% @incoming_bookings.each do |booking| %>
<p><%= booking.ad.description %> --- renter: <%= booking.user.email %> --- status: <%= booking.status %> --- <%= link_to "confirm my booking", booking_path(booking)%></p>
<% end %>
